<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">

            <div class="col-md-8">
                <div class="product-content-right">
                    <div class="product-breadcroumb">
                        @Html.ActionLink("Trang chủ", "Index", "Default")
                        <a href="">@pay.name</a>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="product-images">
                                <div class="product-main-img">
                                    <img src="~/Content/img/@pay.img" alt="">
                                </div>

                                <div class="product-gallery">
                                    <img src="img/product-thumb-1.jpg" alt="">
                                    <img src="img/product-thumb-2.jpg" alt="">
                                    <img src="img/product-thumb-3.jpg" alt="">
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="product-inner">
                                <h2 class="product-name">@pay.name</h2>
                                <div class="product-inner-price">
                                    @if (pay.newprice != null)
                                    {
                                        sum = pay.newprice;
                                        <ins>@string.Format("{0:0,0 VNĐ}", pay.newprice)</ins>
                                        <del>@string.Format("{0:0,0 VNĐ}", pay.price)</del>
                                    }
                                    else
                                    {
                                        sum = pay.price;
                                        <ins>@string.Format("{0:0,0 VNĐ}", pay.price)</ins>
                                    }
                                </div>

                                <div class="product-inner-category" style="margin-top:15px">
                                    <p>Thể loại: <a href="#">@pay.name</a></p>
                                </div>
                                @if (pay.quantity == 0)
                                {
                                    <div class="product-inner-category" style="margin-top:15px; color: red">
                                        <p>Sản phẩm đã hết hàng</p>
                                    </div>
                                }
                                else
                                {
                                    <div class="product-inner-category" style="margin-top:15px;">
                                        <p>Còn <span style="color: blue">@pay.quantity</span> sản phẩm</p>
                                    </div>
                                    <div role="tabpanel" style="width: 130%;">
                                        <ul class="product-tab" role="tablist">
                                            <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Thanh toán khi nhận hàng</a></li>
                                            <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Thanh toán online</a></li>
                                        </ul>
                                        <div class="tab-content">
                                            <div role="tabpanel" class="tab-pane fade in active" id="home">
                                                @using (Html.BeginForm("MuaNgay", "GioHang", FormMethod.Post, new { id = "frmValidate" }))

                                                {
                                                    <input type="hidden" name="totalPrice" value="@sum" />
                                                    <input type="hidden" name="Product_ID" value="@pay.id" />
                                                    <h2 class="page-heading">
                                                        <span class="page-heading-title2" style="padding:2px 26%">Chi tiết đặt hàng</span>
                                                    </h2>
                                                    <input type="hidden" name="productId" value="@pay.id" />
                                                    @*<input type="hidden" name="totalPrice" value="@pay.price" />*@
                                                    <div class="form-group">
                                                        <label>Người nhận</label>
                                                        <input name="CustomerName" class="form-control" value="@Session["ten"].ToString()" readonly />
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Điện thoại</label>
                                                        <input name="CustomerPhone" class="form-control" value="@Session["phone"]" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Địa chỉ</label>
                                                        <input name="CustomerAddress" class="form-control" value="@Session["DiaChi"]" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label>E-Mail</label>
                                                        <input name="CustomerEmail" class="form-control" value="@Session["Email"]" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Lời nhắn:</label>
                                                        <textarea name="Descriptions" id="loinhan" class="form-control" value="" onfocus="this.value = '';" onblur="if (this.value == '') { this.value = 'Lời nhắn ghi ở đây...'; }"></textarea>
                                                    </div>

                                                    <button type="submit" class="button pull-right" style="margin-right: 25px">Gửi đơn hàng</button>
                                                }
                                            </div>
                                            <div role="tabpanel" class="tab-pane fade" id="profile">
                                                <div class="submit-review">
                                                    @using (Html.BeginForm("ValidateCommand", "GioHang", FormMethod.Post, new { id = "frmValidate" }))
                                                    {
                                                        <input type="hidden" name="product" value="@pay.name" />
                                                        <input type="hidden" name="totalPrice" value="@pay.price" />
                                                        <input type="hidden" name="quantity" value="1" />
                                                        <p><label for="name">Họ Tên</label> <input name="name" type="text" value="@Session["ten"].ToString()" readonly></p>
                                                        <p><label for="phone">Số điện thoại</label> <input name="CustomerPhone" type="text" value="@Session["phone"]"></p>
                                                        <p><label for="adress">Địa chỉ</label> <input name="adress" type="text" value="@Session["DiaChi"]" required></p>
                                                        <div class="rating-chooser">
                                                            <input type="submit" name="btnConfirm" class="btn btn-primary btn-block" value="Thanh toán online" />
                                                        </div>
                                                    }

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }



                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="product-images">
                            <div class="product-main-img">
                                <img src="img/product-2.jpg" alt="">
                            </div>

                            <div class="product-gallery">
                                <img src="img/product-thumb-1.jpg" alt="">
                                <img src="img/product-thumb-2.jpg" alt="">
                                <img src="img/product-thumb-3.jpg" alt="">
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

@section jsFooter{


    <script>
        $(document).ready(function () {

            // add the rule here

            jQuery.validator.addMethod("phonenu", function (value, element) {
                if (/^(09[0-9]|07[0|6|7|8|9]|03[2-9]|08[1-5])+([0-9]{7})\b/g.test(value)) {
                    return true;
                } else {
                    return false;
                };
            }, "Invalid phone number");

            jQuery.validator.addMethod("email_regex", function (value, element) {
                if (/^[a-z][a-z0-9_\.]{5,32}@@[a-z0-9]{2,}(\.[a-z0-9]{2,4}){1,2}$/g.test(value)) {
                    return true;
                } else {
                    return false;
                };
            }, "Invalid email");
            //Khi bàn phím được nhấn và thả ra thì sẽ chạy phương thức này
            $("#frmValidate").validate({
                rules: {
                    CustomerName: "required",
                    CustomerAddress: "required",
                    Descriptions: "required",
                    CustomerEmail: {
                        required: true,
                        email_regex: true
                    },
                    CustomerPhone: {
                        required: true,
                        phonenu: true
                    }
                },
                messages: {
                    CustomerName: "Vui lòng nhập họ và tên",
                    CustomerAddress: "Vui lòng nhập địa chỉ",
                    Descriptions: "Vui lòng nhập nội dung đơn hàng",
                    CustomerEmail: {
                        required: "Vui lòng nhập email",
                        email_regex: "Email không hợp lệ"
                    },
                    CustomerPhone: {
                        required: "Vui lòng nhập số điện thoại",
                        phonenu: "Số điện thoại không hợp lệ"
                    }
                }
            });
        });
    </script>
}

